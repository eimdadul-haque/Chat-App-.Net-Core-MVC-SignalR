@model LoginModel

<div class="row login-page ">
    <div class="col-4 border p-5">
        <form method="post" class="text-center">
            <div class="form-group">
                <input asp-for="email" class="form-control" type="text" placeholder="email" />
            </div>
            <div class="form-group mt-3">
                <input asp-for="password" class="form-control" type="text" placeholder="password" />
            </div>
            <div class="form-group mt-3">
                <input style="width: 60%;" class="btn btn-info form-control" type="submit" value="Login" />
            </div>
            <hr />
            <a style="width:80%;" asp-controller="Home" asp-action='SignUp' class="btn btn-primary">Sign Up</a>
        </form>
    </div>
</div>